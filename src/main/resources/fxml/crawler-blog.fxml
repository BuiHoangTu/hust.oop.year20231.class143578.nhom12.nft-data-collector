<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop.controller.BlogController">
    <center>
        <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <TableView fx:id="tableViewMain" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="tableColumnIndex" prefWidth="75.0" text="#" />
                <TableColumn fx:id="tableColumnName" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="tableColumnUrlImage" prefWidth="75.0" text="URL Image" />
                  <TableColumn fx:id="tableColumnUrlBlog" prefWidth="75.0" text="Url Blog" />
              </columns>
            </TableView>
         </children>
        </VBox>
    </center>
    <top>
        <HBox alignment="CENTER" prefHeight="94.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="58.0" prefWidth="600.0">
                    <children>
                        <HBox prefHeight="50.0" prefWidth="239.0">
                            <children>
                                <Label alignment="CENTER" prefHeight="59.0" prefWidth="600.0" text="Hệ Thống thu thập thông tin NFT" textAlignment="CENTER">
                                    <font>
                                        <Font name="Berlin Sans FB Demi Bold" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        
                        <HBox prefHeight="25.0" prefWidth="600.0">
                            <children>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <HBox prefHeight="25.0" prefWidth="63.0" />
                              <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#buttonBack" text="Back" />
                              <HBox prefHeight="25.0" prefWidth="75.0" />
                           </children></HBox>


                                <Button fx:id="buttonBlog" onAction="#onBlogButtonClick" prefHeight="63.0" prefWidth="201.0" text="Thu thập từ Blog mint" textAlignment="CENTER">
                                    <font>
                                        <Font name="Berlin Sans FB Bold" size="12.0" />
                                    </font>
                                </Button>
                                <HBox prefHeight="50.0" prefWidth="200.0" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </top>
</BorderPane>
