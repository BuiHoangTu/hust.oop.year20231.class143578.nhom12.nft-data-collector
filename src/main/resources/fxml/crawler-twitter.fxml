<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../styles/common.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop.controller.TwitterController">
   <center>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <TableView fx:id="tableViewMain" prefWidth="200.0">
            <columns>
               <TableColumn fx:id="columnViewIndex" prefWidth="75.0" text="#" />
               <TableColumn fx:id="columnViewHashTag" prefWidth="75.0" text="Hash Tag" />
               <TableColumn fx:id="columnViewLink" prefWidth="75.0" text="Link" />
            </columns>
         </TableView>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="94.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="58.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="50.0" prefWidth="239.0">
                     <children>
                         <Label alignment="CENTER" prefHeight="59.0" prefWidth="600.0" text="Hệ Thống thu thập thông tin NFT" textAlignment="CENTER">
                             <font>
                                 <Font name="Berlin Sans FB Demi Bold" size="24.0" />
                             </font>
                         </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="25.0" prefWidth="600.0" styleClass="v_box_center">
                     <children>
                        <Button mnemonicParsing="false" onAction="#buttonBack" text="Back" />
                        <HBox prefHeight="100.0" />
               
                                 
                                                 <Button fx:id="buttonTwitter" onAction="#onTwitterButtonClick" prefHeight="63.0" prefWidth="201.0" text="Thu thập từ twitter" textAlignment="CENTER">
                           <font>
                              <Font name="Berlin Sans FB Bold" size="12.0" />
                           </font>
                        </Button>
                        <HBox prefHeight="100.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
</BorderPane>
